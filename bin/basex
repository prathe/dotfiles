#!/bin/bash

# Path to this script
FILE="${BASH_SOURCE[0]}"
while [ -h "$FILE" ] ; do
  SRC="$(readlink "$FILE")"
  FILE="$( cd -P "$(dirname "$FILE")" && \
           cd -P "$(dirname "$SRC")" && pwd )/$(basename "$SRC")"
done
BX="$( cd -P "$(dirname "$FILE")/.." && pwd )"
 
# Core and library classes
#CP="$BX/BaseX.jar"
#CP="$CP$(for JAR in "$BX"/lib/*.jar; do echo -n ":$JAR"; done)"
CP="/Applications/BaseX.app/Contents/Resources/Java/repo/org/basex/basex/7.2.1/basex-7.2.1.jar"
 
# Options for virtual machine
VM=-Xmx512m
 
general_args=( )
vm_args=( )
while (( $# )) ; do
    if [[ $1 = "-X" ]] ; then
        vm_args+=( "$2" )
        shift 2
    else
        general_args+=( "$1" )
        shift
    fi
done
 
# Run code
java -cp "$CP" $VM "${vm_args[@]}" org.basex.BaseX "${general_args[@]}"
